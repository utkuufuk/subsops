{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "deploy": "tsc && firebase deploy --only functions",
    "lint": "eslint .",
    "serve": "tsc && firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log"
  },
  "main": "build/index.js",
  "dependencies": {
    "ajv": "^5.0.0",
    "cors": "^2.8.5",
    "email-validator": "^2.0.4",
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.0.5",
    "nodemailer": "^4.6.8"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0",
    "typescript": "^3.8.3"
  },
  "private": true,
  "engines": {
    "node": "8"
  }
}
